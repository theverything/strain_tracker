<div class="row">
  <% @trends.each do |trend| %>
    <div class="trend row">
      <%= link_to strain_path(trend.id) do %>
        <div class="small-3 columns">
        <span id="first-stop">
        <%= image_tag("/assets/#{ cycle("Golden", "Silver", "Bronze") }Medal.png", alt: "#{(@trends.index(trend) + 1).ordinalize} Place") %></span>
        </div>
        <div class="small-9 columns">
          <div class="trend-name">
            <span id="second-stop"><%= trend.name %></span>
          </div>
          <div class="trend-cat">
            <div class="trend-<%= trend.category.downcase %>">
              <%= image_tag("/assets/#{trend.category}Icon.png", class: "category-icon") %>
              <%= trend.category.downcase %>
            </div>
          </div>
          <div class="trend-rate">
            <%= trend.rating %>/10
          </div>
          <div class="arrow-down"></div>
          <div class="trend-progress"><div class="trend-meter" style="width: <%= trend.rating * 10 %>%"></div></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<ul data-joyride id="joyride-start" class="joyride-tip-guide">
  <li data-id="first-stop">
    <p>Here are todays most smoked strains!</p>
  </li>
  <li data-id="second-stop">
    <p>Click on a strain to "SMOKE IN".</p>
  </li>
  <li data-options="cookieMonster: true; cookieName: 'joyride'; nextButton: false" class="custom-styling">
    <p>
      Don't see the strain your smoking?
    </p>
    <p>Click on the 
      <%= image_tag("/assets/Search-Icon.png", alt: "Search") %>
      to search more strains!
    </p>
  </li>
